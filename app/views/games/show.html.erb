<span class='game-show-headline'><img src=<%= @game.image_link%> style="width:25%;height:25%;"><b><%= @game.name %></b> - <%= @game.likes %> likes</span>
<% if @game.tags.any? %>
  <% @game.tags.each do |tag| %>
    <span class='tag'><%= tag.name %></span>
  <% end %>
<% end %>
<br>
<% if !current_user.games.include?(@game) && user_signed_in? %>
  <%= link_to 'Add to Collection', ownerships_path(game_id: @game.id), method: :post %><br><br>
<% elsif current_user.games.include?(@game) %>
  <p>You already own <%= @game.name %></p><br><br>
<% end %>
<p></p>


Players: <%= @game.number_of_players %> players <br>
Duration: <%= @game.playtime %> minutes <br>
<p>
<%= @game.description %>
<p>


<br>

<% if user_signed_in? %>
  <%= link_to 'Like this Game', votes_path(votable_id: @game.id, votable_type: @game.class), method: :post  %>
<% else %>
  <p>Please log in to like or comment on this game</p>
<% end %>

<% if @game.comments %>
<ul>
  <!-- will need conversion of time zone for stringified time -->
  <% @game.comments.each do |comment| %>
    <li><%= comment.body %> - <%= comment.user.username %> -  <%= comment.created_at.strftime("%l:%M %p - %e, %b %Y") %></li>
  <% end %>
</ul>
<% end %>

<% if user_signed_in? %>
  <%= render 'games/form', :target => @game %>
<% end %>