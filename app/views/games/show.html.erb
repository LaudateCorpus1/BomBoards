<h2><%= @game.name %> - <%= @game.likes %> likes</h2>

<% if !current_user.games.include?(@game) && user_signed_in? %>
  <%= link_to 'Own This Game?', ownerships_path(game_id: @game.id), method: :post %><br><br>
<% elsif current_user.games.include?(@game) %>
  <p>You already own <%= @game.name %></p><br><br>
<% end %>

Players: <%= @game.number_of_players %> players <br>
Duration: <%= @game.playtime %> minutes <br>
<p>
<%= @game.description %>
<p>
<% if user_signed_in? %>
  <%= render 'games/form', :target => @game %>
  <%= link_to 'Like this Game', votes_path(votable_id: @game.id, votable_type: @game.class), method: :post  %>
<% else %>
  <p>Please log in to like or comment on this game</p>
<% end %>

<% if @game.comments %>
<ul>
  <% @game.comments.each do |comment| %>
    <li><%= comment.body %></li>
  <% end %>
</ul>
<% end %>

