  </div>
  <div class='section'>
  <h2>Most Popular Games</h2>
    <% @sorted_games.each do |game| %>
      <a href="/games/<%= game.id %>" class='headline'>
      <img src=<%= game.image_link%> style="width:10%;height:10%;">
